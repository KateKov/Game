@model GameStore.Web.ViewModels.Accounts.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong> @GlobalRes.SignInToContinue</strong>
                </div>
                <div class="panel-body">
                 @using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal"}))
                 {
                     <fieldset>
                         <div class="row">
                             <div class="center-block">
                                 <img class="profile-img"
                                      src="~/Content/images/photo.png" alt="">
                             </div>
                         </div>
                         <div class="row">
                             <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                 <div class="form-group">
                                     <div class="input-group">
                                         <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"></i>
                                            </span>
                                         @Html.TextBoxFor(m=>m.Username, null, new { @class = "form-control", placeholder=GlobalRes.UserName })
                                         @Html.ValidationMessageFor(model => model.Username, null, new { @class = "help-block" })
                                     </div>
                                 </div>
                                 <div class="form-group">
                                     <div class="input-group">
                                         <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-lock"></i>
                                            </span>
                                         @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control", placeholder = GlobalRes.Password })
                                         @Html.ValidationMessageFor(model => model.Password, null, new { @class = "help-block" })
                                     </div>
                                 </div>
                                 <div class="form-group">
                                     <input type="submit" class="btn btn-lg btn-primary btn-block" value=@GlobalRes.Login>
                                 </div>
                             </div>
                         </div>
                     </fieldset>
                 }
                </div>
                <div class="panel-footer ">
                     <a href=@Url.Action("Register")> @GlobalRes.Register </a>
                </div>
            </div>
        </div>
    </div>
</div>

