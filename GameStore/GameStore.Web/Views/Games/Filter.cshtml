@using GameStore.Web.ViewModels

@model FilterViewModel

@using (Html.BeginForm("Filter", "Games", FormMethod.Post)) { 
    <div class="col col-4">
        @for (int i = 0; i < Model.ListGenres.Count; i++)
        {

            @Html.CheckBoxFor(m => m.ListGenres[i].Checked, new { id = "discount" })
            @Html.DisplayFor(m => m.ListGenres[i].Text)
            @Html.HiddenFor(m => m.ListGenres[i].Text)
            <br />
            <br />
        }
      
    </div>
    <div class="col col-4">
        @for (int i = 0; i < Model.ListPublishers.Count; i++)
        {

            @Html.CheckBoxFor(m => m.ListPublishers[i].Checked, new { id = "discount" })
            @Html.DisplayFor(m => m.ListPublishers[i].Text)
            @Html.HiddenFor(m => m.ListPublishers[i].Text)
            <br />
            <br />
        }

    </div>
    <div class="col col-4">
        @for (int i = 0; i < Model.ListTypes.Count; i++)
        {

            @Html.CheckBoxFor(m => m.ListTypes[i].Checked, new { id = "discount" })
            @Html.DisplayFor(m => m.ListTypes[i].Text)
            @Html.HiddenFor(m => m.ListTypes[i].Text)
            <br />
            <br />
        }

    </div>
    <div class="col col-4">
        @Html.DropDownListFor(m=>m.SelectedFilter, EnumHelper.GetSelectList(typeof(FilterViewModel.Filter)), "Filter By");

    </div>
    <input type="submit" value="Send" />
}

