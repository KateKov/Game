@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Store</title>
    @Styles.Render("~/Content/styles")
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Games", "Index", "Games", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Basket", "Basket", "Orders", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Order History", "History", "Orders", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Publishers", "Index", "Publishers", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

<div class="container body-content">
    <div>
        @Html.Action("CountGames", "Games")
        @RenderBody()
    </div>
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Game Store</p>
    </footer>
</div>
    @Scripts.Render("~/bundles/scripts")
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

                        