@model GameStore.Web.ViewModels.Users.CreateUserViewModel
@{
    ViewBag.Title = GlobalRes.Create;
}
<div class="row">
    <div class="form-style-5">
        @using (Html.BeginForm())
{
            @Html.AntiForgeryToken()
    <fieldset>
        <h4>@GlobalRes.Users</h4>
        <hr />
        @Html.HiddenFor(x => x.CreateDate)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label(@GlobalRes.UserName, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(a => a.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Email", new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(a => a.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(@GlobalRes.IsLocked, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(a => a.IsLocked, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsLocked, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(@GlobalRes.IsDeleted, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(a => a.IsDeleted, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsDeleted, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(@GlobalRes.Roles, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.ListBoxFor(model => model.SelectedRoles, new MultiSelectList(Model.AllRoles, "Name", "Name"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedRoles, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
                <input type="submit" value=@GlobalRes.Create class="btn btn-default" />
        </div>
    </fieldset>
        }
    </div>
    <div>
        @Html.ActionLink(GlobalRes.BackToList, "Index")
    </div>
</div>
