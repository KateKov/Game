@using GameStore.Web.ViewModels

@model GameViewModel

@{
    ViewBag.Title = "Новая игра";
}
<div id="addGame">
    <hr>
    <div class="row">
        <div class="col-xs-9 personal-info">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Key)
                <div class="form-horizontal">
                    <h4>Игра</h4>
                    <hr />             
                    <div class="form-group">
                        @Html.NameFor(model => model.Name)                 
                        @Html.DisplayFor(a => a.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.NameFor(model => model.Description)
                        @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.NameFor(model => model.Price)
                        @Html.DisplayFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })               
                    </div>
                    <div class="form-group">
                        @Html.NameFor(model => model.UnitsInStock)
                        @Html.DisplayFor(model => model.UnitsInStock, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.NameFor(model => model.PublisherName)
                        @Html.DisplayFor(model => model.PublisherName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.NameFor(model => model.GenresName)
                        @foreach (var item in Model.GenresName)
                        {
                            <span>@item</span>
                        }
                    </div>
                    <div class="form-group">
                        @Html.NameFor(model => model.PlatformTypesName)
                       @foreach(var item in Model.PlatformTypesName)
                       {
                           <span>@item</span>
                       }                       
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.NameFor(model => model.Discountinues)
                        @Html.DisplayFor(model => model.Discountinues, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
            @Html.ActionLink("Download", "Download", new { gameKey = Model.Key })
            @Html.ActionLink("Comments", "Comments", new {  key = Model.Key })
                </div>
        </div>
    </div>
    <hr>
