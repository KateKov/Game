@using GameStore.Web.Helpers
@using GameStore.Web.ViewModels

@model GameStore.Web.ViewModels.Accounts.BanViewModel
@{
    ViewBag.Title = "Ban";
}

<div class="row">
    <div class="form-style-5">
        @using (Html.BeginForm("Ban"))
        {
            <fieldset>
                <legend>@GlobalRes.Block</legend>
                @Html.HiddenFor(m => m.Name)
                <div class="form-group">
                    @GlobalRes.Reason
                    @Html.EditorFor(a => a.Reason, new {htmlAttributes = new {@class = "form-control"}})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Duration, new {@class = "control-label"})
                    <div>
                        @Html.EnumDropDownList(model => model.Duration, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Duration, null, new {@class = "help-block"})
                    </div>
                </div>
                <input type="submit" value=@GlobalRes.Block />
       
             
            </fieldset>
        }
        <div id="results"></div>
</div>
</div>