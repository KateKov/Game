@model GameStore.Web.ViewModels.OrderDetails.CreateOrderDetail
@{
    ViewBag.Title = GlobalRes.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="addGame">
    <hr>
    <div class="row">
        <div class="col-xs-9 personal-info">
            <div class="alert alert-info alert-dismissable">
                @GlobalRes.OrderDetails
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                @Html.HiddenFor(x=>x.Username)
                @Html.HiddenFor(x => x.OrderId)
                @Html.HiddenFor(x=>x.Quantity)
                <div class="form-group">
                    @GlobalRes.Game
                    @Html.DropDownListFor(model => model.GameKey, new SelectList(Model.AllGames, "Key", "Name"))
                    @Html.ValidationMessageFor(model => model.GameKey, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value=@GlobalRes.Create class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>




