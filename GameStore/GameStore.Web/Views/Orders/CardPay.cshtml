@using GameStore.DAL.Enums
@using GameStore.Web.Helpers
@model GameStore.Web.ViewModels.Orders.VisaViewModel
@{
    ViewBag.Title = "Bank";
}
<div id="quest_form">

    @using (Html.BeginForm("CardPay", "Orders", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend></legend>
            @Html.HiddenFor(model => model.OrderId)
            <div class="form-group">
                @Html.LabelFor(m => m.CardHolderName, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.CardHolderName, null, new { @class = "form-control", placeholder = "Name Surname" })
                    @Html.ValidationMessageFor(model => model.CardHolderName, null, new { @class = "help-block" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CardType, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.EnumDropDownList(m => m.CardType, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CardType, null, new { @class = "help-block" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CardNumber, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    <input type="text"  id = "CardNumber" Name = "CardNumber" value="22222222222222222" placeholder= "Default card: 22222222222222222" class = "form-control" />
                  
                    @Html.ValidationMessageFor(model => model.CardNumber, null, new {@class = "help-block"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MonthOfExpire, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.DropDownListFor(model => model.MonthOfExpire, new SelectList(Model.Months), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MonthOfExpire, null, new { @class = "help-block" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.YearOfExpire, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.DropDownListFor(model => model.YearOfExpire, new SelectList(Model.Years), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.YearOfExpire, null, new { @class = "help-block" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CvvCode, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.CvvCode, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CvvCode, null, new { @class = "help-block" })
                </div>
            </div>
            <ul class="nav nav-tabs">
                <li class="active"><a aria-expanded="true" href="#email" data-toggle="tab">@GlobalRes.Email</a></li>
                <li><a aria-expanded="false" href="#phone" data-toggle="tab">@GlobalRes.Phone</a></li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade active in" id="email">
                    <div class="form-group">
                        @Html.Label(GlobalRes.Email, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "help-block" })
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="phone">
                    <div class="form-group">
                        @Html.Label(GlobalRes.Phone, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.Phone, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Phone, null, new { @class = "help-block" })
                        </div>
                    </div>
                </div>
            </div>
          

            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">@GlobalRes.Pay</button>
            </div>
        </fieldset>
    }
</div>
